# RelayBoard Environment Configuration Template
# Copy this file to .env.local for local development
# For production, set these as secrets in Fly.io and Vercel

# =============================================================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# =============================================================================
# Get these from your Neon project dashboard
PG_HOST=your-neon-host.neon.tech
PG_PORT=5432
PG_USER=your-neon-username
PG_PASSWORD=your-neon-password
PG_DATABASE=your-neon-database

# =============================================================================
# OBJECT STORAGE CONFIGURATION (Supabase Storage or Backblaze B2)
# =============================================================================

# Supabase Storage (Recommended)
S3_ENDPOINT=https://your-project.supabase.co/storage/v1/s3
S3_REGION=us-east-1
S3_ACCESS_KEY=your-supabase-service-role-key
S3_SECRET_KEY=your-supabase-service-role-secret
S3_BUCKET=relayboard

# Alternative: Backblaze B2
# S3_ENDPOINT=https://s3.us-west-000.backblazeb2.com
# S3_REGION=us-west-000
# S3_ACCESS_KEY=your-b2-application-key-id
# S3_SECRET_KEY=your-b2-application-key
# S3_BUCKET=relayboard

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# API Configuration
API_PORT=4000
NODE_ENV=production

# Worker Configuration
WORKER_BASE_URL=https://relayboard-worker-yourname.fly.dev

# Frontend Configuration (for Vercel)
NEXT_PUBLIC_API_BASE=https://relayboard-api-yourname.fly.dev

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Slack Webhook (optional, can be set via UI)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Logging
LOG_LEVEL=info

